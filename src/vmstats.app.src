{application, vmstats, [
  {description, "Tiny application to gather VM statistics"},
  {vsn, "1.0.1"},
  {registered, [vmstats_sup, vmstats_server]},
  {applications, [
    kernel,
    stdlib
  ]},
  {mod, {vmstats, []}},
  {applications, []},
  {modules, [vmstats, vmstats_sup, vmstats_server]},
  {env, [
    {base_key, "vmstats"},
    {delay, 1000}, % in milliseconds
    {sched_time, false}
  ]}
]}.
